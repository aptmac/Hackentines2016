<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.norifurikake.hackenties2016">

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Lonely Lucy on Valentines"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.norifurikake.hackenties2016.MainActivity" />
        </activity>
        <activity
            android:name=".Difficulty"
            android:label="@string/title_activity_difficulty"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.norifurikake.hackenties2016.MainActivity" />
        </activity>
        <activity
            android:name=".Howtoplay"
            android:label="@string/title_activity_howtoplay"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.norifurikake.hackenties2016.MainActivity" />
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.norifurikake.hackenties2016.MainActivity" />
        </activity>
        <activity
            android:name=".Game"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait"
            android:parentActivityName=".Difficulty">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.norifurikake.hackenties2016.Difficulty" />
        </activity>
    </application>

</manifest>
